[color]
    ui = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[alias]
    st = status -sb
    pushall = push --recurse-submodules=on-demand
    ci = commit
    br = branch
    co = checkout
    df = diff
    ls = ls-files
    lo = log --oneline
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    today = shortlog
[core]
    editor = emacs -nw -Q
    autocrlf = input
[push]
    default = tracking
[fetch]
    prune = true
[github]
    user = miguelgr
[commit]
    gpgsign = true
